        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"],
            "@api/*": ["src/api/*"],
            "@assets/*": ["src/assets/*"],
            "@components/*": ["src/components/*"],
            "@pages/*": ["src/pages/*"],
            "@store/*": ["src/store/*"]
