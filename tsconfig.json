{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"],
            "@api/*": ["src/api/*"],
            "@assets/*": ["src/assets/*"],
            "@store/*": ["src/store/*"],
            "@pages/*": ["src/pages/*"],
            "@components/*": ["src/components/*"]
        }
    },
    "include": [
        "*.js",
        "**/*.ts",
        "**/*.tsx",
        "**/*.jsx",
        "src",
    ],
    "references": [{ "path": "./tsconfig.node.json" }]
}
